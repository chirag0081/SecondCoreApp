@model List<UserRoleViewModel>
@{
    ViewBag.Title = "Edit Users In Role";
}

<h1>Edit Users In Role</h1>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2> Add or Romeve users from <strong>@ViewBag.RoleName</strong> role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].UserName
                </label>
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].UserName" />
            </div>
            }
        </div>
        <div class="card-footer">
            <input value="Update" type="submit" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@ViewBag.RoleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>

    </div>
</form>